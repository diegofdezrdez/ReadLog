<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/btnConfiguracion"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_preferences"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/config_desc"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:tint="@color/text_primary"/>

        <TextView
            android:id="@+id/tvTituloApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ReadLog"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:id="@+id/btnCalendario"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_my_calendar"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/calendar_desc"
            android:layout_toStartOf="@id/btnEstadisticas"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:tint="@color/text_primary"/>

        <ImageButton
            android:id="@+id/btnEstadisticas"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/stats_desc"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:tint="@color/text_primary"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/etBusqueda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_hint"
        android:background="@color/surface_color"
        android:padding="12dp"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:elevation="2dp"
        android:layout_marginBottom="12dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/contenedorLibros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp"/>
    </ScrollView>

    <Button
        android:id="@+id/nuevo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/btn_add_book"
        android:textColor="@color/surface_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/button_primary"
        android:elevation="4dp"/>

</LinearLayout>