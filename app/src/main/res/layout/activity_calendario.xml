<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/colorBackground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calendario de Actividad"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Los días en verde indican actividad (libros guardados o actualizados)"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Navegación de mes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnMesAnterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:textSize="18sp"
            android:backgroundTint="@color/button_secondary"/>

        <TextView
            android:id="@+id/tvMesAno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mes Año"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnMesSiguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&gt;"
            android:textSize="18sp"
            android:backgroundTint="@color/button_secondary"/>
    </LinearLayout>

    <!-- Grid del calendario -->
    <GridLayout
        android:id="@+id/gridCalendario"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="7"
        android:rowCount="7"
        android:alignmentMode="alignBounds"
        android:layout_marginBottom="16dp"/>

    <!-- Botón volver -->
    <Button
        android:id="@+id/btnVolverCalendario"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="VOLVER"
        android:textStyle="bold"
        android:backgroundTint="@color/button_secondary"/>

</LinearLayout>
