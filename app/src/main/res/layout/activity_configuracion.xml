<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="?android:attr/colorBackground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/config_title"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="30dp"/>

    <!-- Tema -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config_theme_label"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <RadioGroup
        android:id="@+id/rgTema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <RadioButton
            android:id="@+id/rbTemaClaro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/config_theme_light"
            android:textSize="16sp"
            android:padding="8dp"/>

        <RadioButton
            android:id="@+id/rbTemaOscuro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/config_theme_dark"
            android:textSize="16sp"
            android:padding="8dp"/>

        <RadioButton
            android:id="@+id/rbTemaAuto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/config_theme_auto"
            android:textSize="16sp"
            android:padding="8dp"/>
    </RadioGroup>

    <!-- TamaÃ±o de letra -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config_font_size_label"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <Spinner
        android:id="@+id/spTamanoLetra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@color/input_background"
        android:layout_marginBottom="24dp"/>

    <!-- Idioma -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config_language_label"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <Spinner
        android:id="@+id/spIdioma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@color/input_background"
        android:layout_marginBottom="32dp"/>

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnVolverConfig"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="@string/btn_back_config"
            android:textStyle="bold"
            android:backgroundTint="@color/button_secondary"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnGuardarConfig"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="@string/btn_save_config"
            android:textColor="@color/surface_color"
            android:textStyle="bold"
            android:backgroundTint="@color/button_primary"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
